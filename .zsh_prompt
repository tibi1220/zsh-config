#!/bin/zsh
autoload -U colors && colors
setopt promptsubst

shpwd() {
  echo ${${:-/${(j:/:)${(M)${(s:/:)${(D)PWD:h}}#(|.)[^.]}}/${PWD:t}}//\/~/\~}
}

# Load version control information
autoload -Uz vcs_info
precmd() { vcs_info }

+vi-git-untracked(){
    if [[ $(git rev-parse --is-inside-work-tree 2> /dev/null) == 'true' ]] && \
        git status --porcelain | grep '??' &> /dev/null ; then
        # This will show the marker if there are any untracked files in repo.
        # If instead you want to show the marker only if there are untracked
        # files in $PWD, use:
        #[[ -n $(git ls-files --others --exclude-standard) ]] ; then
        hook_com[staged]+='T'
    fi
}

# TODO: configure git status
zstyle ':vcs_info:*' unstagedstr 'uns' 
zstyle ':vcs_info:*' stagedstr 'sta'

zstyle ':vcs_info:git*+set-message:*' hooks git-untracked
zstyle ':vcs_info:*' check-for-changes true
zstyle ':vcs_info:git:*' formats "%{$fg_bold[green]%} (%{$fg[yellow]%}%b%{$fg[green]%})"

PS1='%{${fg[green]}%}[%{${fg[blue]}%}$(shpwd)%{${fg[green]}%}]%{${reset_color}%}'
PS1+='${vcs_info_msg_0_}'
PS1+="%(?.%{$fg[green]%}.%{$fg[red]%})%B ➜%b "

